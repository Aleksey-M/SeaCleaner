@model SeaCleaner.ViewModels.LoginViewModel
@{ 
    ViewData["Title"] = "Вход";
}

<h2>Вход</h2>
<form method="post" asp-action="Login" asp-controller="Account">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Login"></label><br />
        <input asp-for="Login" />
        <span asp-validation-for="Login"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="RememberMe"></label><br />
        <input asp-for="RememberMe" />
    </div>
    <div>
        <input type="submit" value="Вход" class="btn btn-default" />
    </div>
</form>

<a asp-action="Index" asp-controller="Home" class="btn">Вернуться на главную</a>